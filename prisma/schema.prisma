generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id          String @id @default(uuid())
  code        String

  measures    Measure[]
}

model Measure {
  id String   @id @default(uuid())
  type        String
  confirmed   Boolean
  imageUrl    String
  createdAt   DateTime @default(now())

  customerId  String
  customer    Customer   @relation(fields: [customerId], references: [id])
}